{
  "$schema": "../brand.schema.json",
  "brand": {
    "id": "pssenior",
    "name": "P.S. Senior Secondary School",
    "shortName": "pss",
    "tagline": "Excellence in Education"
  },
  "app": {
    "android": {
      "applicationId": "com.schooltree.pssenior",
      "versionCode": 1,
      "versionName": "1.0.0"
    },
    "ios": {
      "bundleId": "com.schooltree.pssenior",
      "version": "1.0.0",
      "buildNumber": "1"
    }
  },
  "api": {
    "baseUrl": "https://dev1.schooltree.in/api",
    "databaseName": "pssenior"
  },
  "firebase": {
    "projectId": "stbedes-741ae",
    "configGroup": "group-a"
  },
  "auth": {
    "type": "password",
    "otpLength": 6,
    "countryCode": "+91"
  },
  "theme": {
    "colors": {
      "primary": "#137fec",
      "primaryDark": "#0f66bd",
      "primarySoft": "#e7f2fd",
      "accent": "#10b981",
      "background": "#f6f7f8",
      "surface": "#ffffff",
      "text": "#111418",
      "textSecondary": "#617589",
      "success": "#10b981",
      "warning": "#f59e0b",
      "error": "#ef4444",
      "info": "#3b82f6"
    },
    "fonts": {
      "primary": "Lexend",
      "secondary": "Inter"
    }
  },
  "features": {
    "modules": {
      "dashboard": {
        "enabled": true
      },
      "circulars": {
        "enabled": true
      },
      "homework": {
        "enabled": true
      },
      "attendance": {
        "enabled": true
      },
      "exams": {
        "enabled": true
      },
      "marks": {
        "enabled": true
      },
      "fees": {
        "enabled": false,
        "showPaymentGateway": false
      },
      "calendar": {
        "enabled": false
      },
      "gallery": {
        "enabled": true
      },
      "timetable": {
        "enabled": false
      },
      "chat": {
        "enabled": false
      },
      "profile": {
        "enabled": true
      },
      "parentMessage": {
        "enabled": false
      }
    },
    "notifications": {
      "enabled": true,
      "topics": [
        "circulars",
        "homework",
        "attendance"
      ]
    },
    "offlineMode": true,
    "darkMode": false
  }
}